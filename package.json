{
  "name": "poc-be",
  "version": "0.0.1",
  "main": "src/App.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc  & nodemon dist",
    "lint": "eslint src test --ext ts --fix",
    "tsc": "tsc",
    "clean": "rm -rf coverage dist",
    "test": "npx jest --coverage",
    "test:watch": "npx jest --coverage --watchAll",
    "test:coverage": "serve --debug coverage/lcov-report",
    "database:build": "sudo docker build -t poc-postgres .",
    "database:start": "sudo docker-compose -f docker-composer.yml up -d",
    "database:stop": "sudo docker-compose -f docker-composer.yml stop",
    "database:kill": "sudo docker-compose -f docker-composer.yml down",
    "database:logs": "sudo docker-compose -f docker-composer.yml logs -f",
    "database:ip": "sudo docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' pocbe_db_1"
  },
  "private": true,
  "dependencies": {
    "@types/jest-json-schema": "^2.1.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jest-json-schema": "^2.1.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.12",
    "sequelize-typescript": "^1.1.0"
  },
  "devDependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/bluebird": "^3.5.32",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.12",
    "@types/source-map-support": "^0.5.1",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.0.1",
    "jest-joi-schema": "^1.0.0",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "sequelize-mock": "^0.10.2",
    "sequelize-test-helpers": "^1.2.2",
    "serve": "^11.3.2",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "typescript-eslint-parser": "^22.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@clients": "dist/clients",
    "@controllers": "dist/controllers",
    "@entities": "dist/entities",
    "@models": "dist/models",
    "@repositories": "dist/repositories",
    "@routes": "dist/routes",
    "@use-cases": "dist/use-cases"
  }
}
